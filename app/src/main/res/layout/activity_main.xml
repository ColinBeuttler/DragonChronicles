<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_94395"
    android:orientation="vertical">

    <TextView
        android:id="@+id/game_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="Dragon Chronicles"
        android:textColor="#b53737"
        android:textSize="60sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/start_new_game_card"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start New Game" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/chapter_selection_card"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_below="@id/start_new_game_card"
            android:layout_centerHorizontal="true"
            android:layout_margin="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chapter Selection" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>